<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".View.EditUser.EditInforActivity">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp"
        android:background="@color/teal_200"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/tvEditHeader"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="40dp"
                android:text="Bạn có muốn hoàn tất hồ sơ không ?"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="26sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/btnNCancel"
                android:layout_width="135dp"
                android:layout_height="60dp"
                android:layout_margin="30dp"
                android:backgroundTint="@android:color/transparent"
                android:text="Bỏ qua"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#4CAF50"
                android:textSize="18sp"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                app:icon="@drawable/cancel"
                app:iconGravity="start"
                app:iconSize="20dp"
                app:iconTint="#4CAF50"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditHeader"
                app:strokeColor="#4CAF50"
                app:strokeWidth="3dp" />

            <Button
                android:id="@+id/btnNComplete"
                android:layout_width="135dp"
                android:layout_height="60dp"
                android:backgroundTint="#DAF4DB"
                android:text="Tiếp tục"
                android:textSize="18sp"
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#4CAF50"
                android:textStyle="bold"
                app:cornerRadius="30dp"
                app:icon="@drawable/next"
                app:iconGravity="start"
                app:iconSize="25dp"
                app:iconTint="#4CAF50"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvEditHeader"
                app:layout_constraintBottom_toBottomOf="parent"
                app:strokeColor="#4CAF50"
                app:strokeWidth="3dp"
                android:layout_margin="30dp"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>