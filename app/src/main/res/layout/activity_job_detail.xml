<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".View.JobDetailActivity">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="70dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/DJAvatar"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/tvDJNameJob"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="Fresher Python"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/DJAvatar"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/tvDJNameCompany"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/DJAvatar"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tvDJNameJob"
            android:text="Fresher Python"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/black"
            android:textSize="14sp"/>
        <Button
            android:id="@+id/btnDJInformation"
            android:layout_width="100dp"
            android:layout_height="45dp"
            android:text="Thông tin"
            android:textSize="16sp"
            android:backgroundTint="#4CAF50"
            app:cornerRadius="30dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/DJAvatar"
            android:layout_margin="15dp"/>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:background="@drawable/shape_constraint"
            android:id="@+id/constraintInformation"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/btnDJInformation"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin chung "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>
            <ImageView
                android:id="@+id/imageDJSalary"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/money"
                android:layout_marginStart="30dp"
                android:layout_marginTop="50dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mức lương:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@id/imageDJSalary"
                app:layout_constraintTop_toTopOf="@id/imageDJSalary"
                android:layout_marginStart="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDJSalary"
                android:text="Thuong Luong"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/imageDJSalary"
                app:layout_constraintTop_toTopOf="@id/imageDJSalary"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"/>

            <ImageView
                android:id="@+id/imageDJInventory"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/inventory"
                android:backgroundTint="#03A9F4"
                android:layout_marginStart="30dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageDJSalary"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Số lượng cần tuyển:"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="14dp"
                app:layout_constraintStart_toStartOf="@id/imageDJInventory"
                app:layout_constraintTop_toTopOf="@id/imageDJInventory"
                android:layout_marginStart="50dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvDJInventory"
                android:text="Thuong Luong"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="16dp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="@id/imageDJInventory"
                app:layout_constraintTop_toTopOf="@id/imageDJInventory"
                android:layout_marginStart="50dp"
                android:layout_marginTop="20dp"/>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintDJGender"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageDJInventory">
                <ImageView
                    android:id="@+id/imageDJGender"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/male"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giới tính:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/imageDJGender"
                    app:layout_constraintTop_toTopOf="@id/imageDJGender"
                    android:layout_marginStart="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDJGender"
                    android:text="Thuong Luong"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/imageDJGender"
                    app:layout_constraintTop_toTopOf="@id/imageDJGender"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintDJExperience"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:visibility="visible"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintDJGender">
                <ImageView
                    android:id="@+id/imageDJExperience"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/experience"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Kinh nghiệm:"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textSize="14dp"
                    app:layout_constraintStart_toStartOf="@id/imageDJExperience"
                    app:layout_constraintTop_toTopOf="@id/imageDJExperience"
                    android:layout_marginStart="50dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tvDJExperience"
                    android:text="Thuong Luong"
                    android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                    android:textColor="@color/black"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/imageDJExperience"
                    app:layout_constraintTop_toTopOf="@id/imageDJExperience"
                    android:layout_marginStart="50dp"
                    android:layout_marginTop="20dp"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
            <androidx.constraintlayout.widget.ConstraintLayout
               android:id="@+id/constraintDJAddress"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:visibility="visible"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintTop_toBottomOf="@id/constraintDJExperience">
               <ImageView
                   android:id="@+id/imageDJAddress"
                   android:layout_width="40dp"
                   android:layout_height="40dp"
                   android:src="@drawable/address"
                   android:layout_marginStart="30dp"
                   android:layout_marginTop="10dp"
                   app:layout_constraintStart_toStartOf="parent"
                   app:layout_constraintTop_toTopOf="parent"/>
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Địa chỉ:"
                   android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                   android:textColor="@color/black"
                   android:textSize="14dp"
                   app:layout_constraintStart_toStartOf="@id/imageDJAddress"
                   app:layout_constraintTop_toTopOf="@id/imageDJAddress"
                   android:layout_marginStart="50dp"/>
               <TextView
                   android:layout_width="290dp"
                   android:layout_height="wrap_content"
                   android:id="@+id/tvDJAddress"
                   android:text="Thuong Luong"
                   android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                   android:textColor="@color/black"
                   android:textSize="16dp"
                   android:textStyle="bold"
                   app:layout_constraintStart_toStartOf="@id/imageDJAddress"
                   app:layout_constraintTop_toTopOf="@id/imageDJAddress"
                   android:layout_marginStart="50dp"
                   android:layout_marginTop="20dp"/>

           </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/btnDJExpend"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thu gọn"
                android:textSize="16sp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="#4CAF50"
                android:background="@android:color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@id/constraintDJAddress"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintResponsibilities"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_cv_constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/constraintInformation">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvDJResponsibilities"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Mô tả công việc jds ns dh hdwu dhwusd ksad hadshd siskhd dhwoi dsdh owd hs"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDJResponsibilities"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintQualifications"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_cv_constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/constraintResponsibilities">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvDJQualifications"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Mô tả công việc jds ns dh hdwu dhwusd ksad hadshd siskhd dhwoi dsdh owd hs"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDJQualifications"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintInterests"
            android:layout_width="390dp"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_cv_constraint"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/constraintQualifications">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mô tả công việc "
                android:textAlignment="center"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="20sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="20dp"
                android:layout_marginTop="10dp"/>

            <TextView
                android:id="@+id/tvDJInterests"
                android:layout_width="340dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="40dp"
                android:text="Mô tả công việc jds ns dh hdwu dhwusd ksad hadshd siskhd dhwoi dsdh owd hs"
                android:textAlignment="textStart"
                android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_marginStart="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvDJInterests"/>
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
